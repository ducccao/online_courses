{{#section 'js'}}
<!-- Optional: include a polyfill for ES6 Promises for IE11 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>


<script type="module">
    import { openAlert } from "/utils/alertModal.js"
    function editCategory() {
        const editCateFm = $("#editCateFm");
        const catName = $("#catName");
        const catLevel = $("#catLevel");
        const catID = $("#catID");

        editCateFm.on("submit", event => {
            event.preventDefault();

            // validate cat level
            if (catLevel.val() !== "1" && catLevel.val() !== "0") {
                const messageTrigger = {
                    timer: 1500,
                    html: '',
                    title: "Invalid Category Level!",
                    icon: "warning",
                }
                openAlert(messageTrigger)
                return;
            }

            const data = {
                catID: catID.val(),
                catName: catName.val(),
                catLevel: catLevel.val(),
            }

            $.ajax({
                type: "post",
                url: "/admin/categories/edit",
                data: data,
                xhrFields: {
                    withCredentials: false
                },
                headers: {

                },
                success: data => {
                    // console.log(data);
                    const messageTrigger = {
                        timer: 1500,
                        html: '',
                        icon: 'success',
                        title: "Edited Category!"
                    }
                    openAlert(messageTrigger)
                },
                error: er => {
                    console.log(er)
                    const messageTrigger = {
                        timer: 1500,
                        html: '',
                        icon: 'error',
                        title: er.responseJSON.message,
                    }
                    openAlert(messageTrigger)
                }
            })

        })

    }
    editCategory();
</script>
{{/section}}
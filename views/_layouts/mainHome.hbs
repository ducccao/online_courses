    <script>
        var slides = document.getElementsByClassName("slides");
        var nextBtn = document.getElementById("next-btn");
        var previosBtn = document.getElementById("prev-btn");

        var slideIndex = 0;
        function showFirstSlide() {
            for (let crush = 0; crush < slides.length; ++crush) {
                slides[crush].style.display = "none";
            }
            slides[slideIndex].style.display = "block";
        }
        showFirstSlide();

        nextBtn.addEventListener("click", e => {
            if (slideIndex >= slides.length - 1) {
                slideIndex = 0;
            }
            else {
                slideIndex++;
            }
            showFirstSlide();
        })

        previosBtn.addEventListener("click", e => {
            if (slideIndex <= 0) {
                slideIndex = slides.length - 1;
            }
            else {
                slideIndex--;
            }
            showFirstSlide();
        })

        function triggerToShowSlide() {
            if (slideIndex >= slides.length - 1) {
                slideIndex = 0;
            }
            else {
                slideIndex++;
            }
        }
        setInterval(triggerToShowSlide, 5000)
    </script>

